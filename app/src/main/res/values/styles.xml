<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MediaSelector.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@anim/button_state_list_animator</item>
    </style>

    <style name="Widget.MediaSelector.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryVariant</item>
    </style>
</resources> 